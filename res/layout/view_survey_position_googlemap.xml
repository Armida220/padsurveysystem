<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_x_view_survey_position_googlemap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:text="位置获取中..." />

            <TextView
                android:id="@+id/textView_y_view_survey_position_googlemap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:text="位置获取中..."
                android:textColorHint="@color/black" />

            <TextView
                android:id="@+id/textView_z_view_survey_position_googlemap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:text="位置获取中..."
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.92"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/button_save_view_survey_position_googlemap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存" />

        </LinearLayout>

    </LinearLayout>

    <fragment
        android:id="@+id/fragment_googlemap_view_survey_position_googlemap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        class="com.google.android.gms.maps.MapFragment" />

</LinearLayout>